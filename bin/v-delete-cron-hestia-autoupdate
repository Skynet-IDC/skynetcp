#!/bin/bash
# info: delete skynet autoupdate cron job
# options: NONE
#
# This function deletes skynet autoupdate cron job.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

is_system_enabled "$CRON_SYSTEM" 'CRON_SYSTEM'

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

sed -i "/v-update-sys-skynet-all/d" "/var/spool/cron/crontabs/skynetweb"
sed -i "/v-update-sys-skynet-git/d" "/var/spool/cron/crontabs/skynetweb"

#----------------------------------------------------------#
#                       Skynet                             #
#----------------------------------------------------------#

# Restarting crond
$BIN/v-restart-cron
check_result $? "Cron restart failed" > /dev/null

# Logging
$BIN/v-log-action "system" "Warning" "System" "Automatic updates disabled."
log_event "$OK" "$ARGUMENTS"

exit
