#!/bin/bash
# info: revokes api key
# options: [HASH]
#
# example: v-revoke-api-key mykey
#
# This function removes a key from in $SKYNET/data/keys/

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

hash=$1

args_usage='HASH'
check_args '1' "$#" "$args_usage"
is_format_valid 'hash'

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ ! -d "$SKYNET/data/keys/" ]; then
	exit "$E_NOTEXIST"
fi

if [[ -e "$SKYNET/data/keys/$hash" ]]; then
	rm $SKYNET/data/keys/$hash
else
	exit "$E_NOTEXIST"
fi

#----------------------------------------------------------#
#                       Skynet                             #
#----------------------------------------------------------#

# Logging
$BIN/v-log-action "system" "Info" "System" "System API key revoked (Key: $hash)."
log_event "$OK" "$ARGUMENTS"

exit
