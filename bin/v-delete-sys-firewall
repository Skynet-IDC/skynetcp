#!/bin/bash
# info: delete system firewall
# options: NONE
#
# example: v-delete-sys-firewall
#
# This function disables firewall support

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

if [ -z "$FIREWALL_SYSTEM" ]; then
	exit
fi

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Updating FIREWALL_SYSTEM value
$BIN/v-change-sys-config-value "FIREWALL_SYSTEM" ""

# Stopping firewall
$BIN/v-stop-firewall

#----------------------------------------------------------#
#                       Skynet                             #
#----------------------------------------------------------#

# Logging
$BIN/v-log-action "system" "Warning" "Firewall" "System firewall disabled."
log_event "$OK" "$ARGUMENTS"

exit
