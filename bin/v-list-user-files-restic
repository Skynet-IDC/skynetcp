#!/bin/bash
# info: backup system user with all its objects
# options: USER SNAPSHOT FOLDER
#
# example: v-backup-user admin yes
#
# This function is used for backing up user with all its domains and databases.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
user=$1
snapshot=$2
folder=$3
# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# shellcheck source=/usr/local/skynet/func/domain.sh
source $SKYNET/func/domain.sh
# shellcheck source=/usr/local/skynet/func/db.sh
source $SKYNET/func/db.sh
# shellcheck source=/usr/local/skynet/func/backup.sh
source $SKYNET/func/backup.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'USER'
is_format_valid 'user'
is_system_enabled "$BACKUP_SYSTEM" 'BACKUP_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

source_conf $SKYNET/conf/restic.conf

restic --repo "$REPO$user" --password-file $USER_DATA/restic.conf --json ls $snapshot $folder

#----------------------------------------------------------#
#                       Skynet                             #
#----------------------------------------------------------#

exit
