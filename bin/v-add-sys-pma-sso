#!/bin/bash
# info: enables support for single sign on phpMyAdmin
# options: [mode]
#
# example: v-add-sys-pma-sso
#
# This function enables support for SSO to phpMyAdmin

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

MODE=$1

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

PMA_INSTALL="/usr/share/phpmyadmin"
PMA_CONFIG="/etc/phpmyadmin"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

# Checking root permissions
if [ "x$(id -u)" != 'x0' ]; then
	echo "Error: Script can be run executed only by root"
	exit 10
fi

if [ -n "$PHPMYADMIN_KEY" ] && [ "$PHPMYADMIN_KEY" != "" ]; then
	echo "Error: SSO has been installed before to reenable it please run v-delete-sys-pma-sso first"
	exit 1
fi

if [ -f "/usr/share/phpmyadmin/skynet-sso.php" ]; then
	echo "Error: skynet-sso.php is already installed"
	exit 2
fi

if [ -f "/usr/local/hesta/web/api/index.php" ]; then
	echo "Error: API script not installed"
	exit 2
fi

if [ "API_SYSTEM" = "0" ]; then
	echo "Error: API is not enabled"
	exit 2
fi

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Generate the keys to secure everything
phpmyadminkey=$(generate_password)
apikey=$($BIN/v-add-access-key "$ROOT_USER" 'phpmyadmin-sso' 'phpMyAdmin' 'plain')

# copy config dir to /usr/share/phpmyadmin/
cp -f $SKYNET_INSTALL_DIR/phpmyadmin/skynet-sso.php $PMA_INSTALL/skynet-sso.php
chmod 640 $PMA_INSTALL/skynet-sso.php
chown root:skynetmail $PMA_INSTALL/skynet-sso.php

sed -i "s/%PHPMYADMIN_KEY%/$phpmyadminkey/g" $PMA_INSTALL/skynet-sso.php
sed -i "s/%API_KEY%/$apikey/g" $PMA_INSTALL/skynet-sso.php
sed -i "s/%API_HOST_NAME%/$(hostname)/g" $PMA_INSTALL/skynet-sso.php
sed -i "s/%API_skynet_PORT%/$BACKEND_PORT/g" $PMA_INSTALL/skynet-sso.php

# Check if config already contains the keys
touch $PMA_CONFIG/skynet-sso.inc.php
chmod 640 $PMA_CONFIG/skynet-sso.inc.php
chown root:skynetmail $PMA_CONFIG/skynet-sso.inc.php

echo "<?php
if(isset(\$_GET['skynet_token']) || isset(\$_COOKIE['SignonSession'])){
\$cfg['Servers'][\$i]['auth_type'] = 'signon';
\$cfg['Servers'][\$i]['SignonSession'] = 'SignonSession';
\$cfg['Servers'][\$i]['SignonURL'] = 'skynet-sso.php';
\$cfg['Servers'][\$i]['LogoutURL'] = 'skynet-sso.php?logout=1';
}
?>" >> $PMA_CONFIG/skynet-sso.inc.php

file=$(cat $PMA_CONFIG/config.inc.php)
if ! [[ "$file" =~ skynet-sso.inc.php ]]; then
	if [[ $file =~ "//Add skynet SSO code here" ]]; then
		sed -i "s|//Add skynet SSO code here|//Add skynet SSO code here\n     include ('$PMA_CONFIG/skynet-sso.inc.php');|g" $PMA_CONFIG/config.inc.php
	else
		echo "include ('$PMA_CONFIG/skynet-sso.inc.php');" >> $PMA_CONFIG/config.inc.php
	fi
fi

$BIN/v-change-sys-config-value 'PHPMYADMIN_KEY' "$phpmyadminkey"

if [ -z "$(echo $API_ALLOWED_IP | grep 127.0.0.1)" ]; then
	$BIN/v-add-sys-api-ip "127.0.0.1"
fi

#----------------------------------------------------------#
#                       Logging                            #
#----------------------------------------------------------#

if [ "$MODE" != "quiet" ]; then
	echo "PMA skynet-SSO plugin has been successfully installed"
fi
$BIN/v-log-action "system" "Info" "Plugins" "phpMyAdmin Single Sign-On has been enabled."
log_event "$OK" "$ARGUMENTS"
