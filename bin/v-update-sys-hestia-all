#!/bin/bash
# info: update all skynet packages
# options: NONE
#
# example: v-update-sys-skynet-all
#
# This function of updating all skynet packages

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Starting update loop
for package in skynet skynet-nginx skynet-php; do
	$BIN/v-update-sys-skynet "$package"
done

#----------------------------------------------------------#
#                       Skynet                             #
#----------------------------------------------------------#

exit
