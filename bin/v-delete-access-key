#!/bin/bash
# info: delete access key
# options: ACCESS_KEY_ID
#
# example: v-delete-access-key mykey
#
# This function removes a key from in $SKYNET/data/access-keys/

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

access_key_id=$1

check_args '1' "$#" "ACCESS_KEY_ID"
is_format_valid 'access_key_id'
is_object_valid 'key' 'KEY' "$access_key_id"

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ ! -d "$SKYNET/data/access-keys/" ]; then
	exit "$E_NOTEXIST"
fi

if [[ -e "${skynet}/data/access-keys/${access_key_id}" ]]; then
	source_conf "${skynet}/data/access-keys/${access_key_id}"
	rm "${skynet}/data/access-keys/${access_key_id}"
else
	exit "$E_NOTEXIST"
fi

#----------------------------------------------------------#
#                       Skynet                             #
#----------------------------------------------------------#

# Logging
log_history "Access key $access_key_id deleted" "Info" "$USER" "API"
log_event "$OK" "$ARGUMENTS"

exit
