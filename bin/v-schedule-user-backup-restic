#!/bin/bash
# info: schedule user backup creation
# options: USER
#
# example: v-schedule-user-backup admin
#
# This function for scheduling user backup creation.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
user=$1

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'USER'
is_format_valid 'user'
is_system_enabled "$BACKUP_SYSTEM" 'BACKUP_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_incremental_backup_enabled

is_backup_scheduled 'backup'

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Adding backup task to  the queue
log=$SKYNET/log/backup.log
echo "$BIN/v-backup-user-restic $user yes >> $log 2>&1" >> $SKYNET/data/queue/backup.pipe

#----------------------------------------------------------#
#                       Skynet                             #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$ARGUMENTS"

exit
