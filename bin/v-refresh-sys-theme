#!/bin/bash
# info: change active system theme
# options: NONE
#
# example: v-refresh-sys-theme
#
# This function for changing the currently active system theme.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Store current theme name
CURRENT_THEME=$THEME

# Cycle theme to regenerate (helps if cache is stuck)
$BIN/v-change-sys-theme "default"
$BIN/v-change-sys-theme "$CURRENT_THEME"
