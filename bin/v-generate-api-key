#!/bin/bash
# info: generate api key
# options: NONE
#
# example: v-generate-api-key
#
# This function creates a key file in $SKYNET/data/keys/

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/skynetcp/skynet.conf
source /etc/skynetcp/skynet.conf
# shellcheck source=/usr/local/skynet/func/main.sh
source $SKYNET/func/main.sh
# load config file
source_conf "$SKYNET/conf/skynet.conf"

keygen() {
	tr < /dev/urandom -dc _A-Z-a-z-0-9 | head -c 32
	echo
}
HASH=$(keygen)

# Perform verification if read-only mode is enabled
check_skynet_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ ! -d "$SKYNET/data/keys/" ]; then
	mkdir -p $SKYNET/data/keys/
	chown skynetweb:root $SKYNET/data/keys/
	chmod 750 $SKYNET/data/keys/
fi

if [[ -e "$SKYNET/data/keys/$HASH" ]]; then
	while [[ -e "$SKYNET/data/keys/$HASH" ]]; do
		HASH=$(keygen)
	done
fi

touch $SKYNET/data/keys/$HASH
echo "$HASH"

#----------------------------------------------------------#
#                       Skynet                             #
#----------------------------------------------------------#

# Logging
$BIN/v-log-action "system" "Warning" "System" "New system API key generated (Key: ${HASH})."

exit
